@using PagedList.Mvc;
@using BIYOKEA.Models;
@model PagedList.IPagedList<SanPham>

@{
    ViewBag.Title = "editItem";
    Layout = "~/Views/Shared/_LayoutQuanLi.cshtml";
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
}
<form method="post">
    
    <table class="table">
       
        <tr>
            <th>
                <h5>Mã sản phẩm</h5>
            </th>
            <th>
                <h5>Giá</h5>
            </th>
            <th>
                <h5>Hình ảnh</h5>
            </th>
            <th>
                <h5>Số Lượng</h5>
            </th>
            <th>
                <h5>Tên Sản Phẩm</h5>
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.maCTloai)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.gia)
                </td>
                <td>
                    <img src="@item.photoURL" alt="" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.soLuong)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.tenSP)
                </td>
                <td>
                    <a href="@Url.Action("Sua","Edit",new { id=item.maSP})">Sửa</a> |
                    <a href="@Url.Action("Xoa","Edit",new { id=item.maSP})">Xóa</a> |
                    @Html.ActionLink("Chi tiết", "Delete", new { id = item.maSP })
                </td>
            </tr>
        }

    </table>
</form>
<div class="dlink">
    Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)/@Model.PageCount
    @Html.PagedListPager(Model, page => Url.Action("editItem", new { page = page }))

</div>
